<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="container" id="wizard-container">
        <div class="row">
        <div class="col-sm-7">

            <!--      Wizard container        -->
            <div class="wizard-container">

                <div class="card wizard-card" data-color="orange" id="wizardProfile">
                    <form action="" method="">
                <!--        You can switch ' data-color="orange" '  with one of the next bright colors: "blue", "green", "orange", "red"          -->

                      <div class="wizard-header">
                          <h3>Start Project</h3>
                          <small>Fields marked with an * are required</small>
                          
                      </div>

            <div class="wizard-navigation">
              <ul>
                              <li><a href="#basic" data-toggle="tab">Basic</a></li>
                              <li><a href="#about" data-toggle="tab">About</a></li>
                              <li><a href="#account" data-toggle="tab">Account</a></li>
                              <li><a href="#address" data-toggle="tab">Address</a></li>
                              <li><a href="#sample" data-toggle="tab">Sample</a></li>
                              <li><a href="#demo" data-toggle="tab">Demo</a></li>
                          </ul>

            </div>

                        <div class="tab-content">
                            <div class="tab-pane" id="basic">
                              <div class="row">
                                <div class="col-sm-10 col-sm-offset-1">
                                  <div class="form-group">
                                    <label for="name">Project Name *</label>
                                    <br>
                                    <%= text_field_tag :name, "", class: 'form-control', required: true %>
                                    <br>
                                  </div>
                                </div>

                                <div class="col-sm-10 col-sm-offset-1">
                                  <div class="form-group">
                                    <label for="email">Work Email *</label>
                                    <br>
                                    <%= text_field_tag :email, "", class: 'form-control', required: true %>
                                    <br>
                                  </div>
                                </div>
                              </div>
                            </div>

                            <div class="tab-pane" id="about">
                              <div class="row">
                                  
                                  <div class="col-sm-10 col-sm-offset-1">
                                    <div class="form-group">
                                      <label for="service">Services <small>(required)</small></label>
                                      <select id="b" name="services" class="form-control" required>
                                        
                                        <option>I have a new product that needs to be manufactured</option>
                                        <option>I have an existing product that I would like to get quoted</option>
                                        <option>I am seeking prototyping services</option>
                                        <option>I am looking to research a factory I am considering engaging in business</option>
                                        <option>I am looking for an experienced consumer product project manager to assist with my project</option>
                                        <option>I want to do a quality audit on a factory in China</option>
                                      </select>
                                    </div>
                                  </div>
                                  <div class="col-sm-10 col-sm-offset-1">
                                    <div class="form-group">
                                      <label for="importantance_importantance">Most important in getting my product manufactured *</label>
                                        <br>
                                        <%= radio_button_tag(:importantance, "importantance", false, required: true) %>
                                        <%= label_tag(:quality, "Quality") %>
                                        <br>
                                        <%= radio_button_tag(:importantance, "importantance") %>
                                        <%= label_tag(:price, "Price") %>
                                        <br>
                                        <%= radio_button_tag(:importantance, "importantance") %>
                                        <%= label_tag(:getting_product_ASAP, "Getting product ASAP") %>
                                    </div>
                                  </div>
                                  <div class="col-sm-10 col-sm-offset-1">
                                    <div class="form-group">
                                      <label for="source_source">Do you currently source or manufacture product in China? *</label>
                                        <br>
                                        <%= radio_button_tag(:source, "source", false, required: true) %>
                                        <%= label_tag(:source, "Yes") %>
                                        <br>
                                        <%= radio_button_tag(:source, "source") %>
                                        <%= label_tag(:source, "No") %>
                                        <br>
                                    </div>
                                  </div>
                                  
                              </div>
                            </div>
                            <div class="tab-pane" id="account">
                                
                                <div class="row">

                                  <div class="col-sm-10 col-sm-offset-1">
                                    <div class="form-group">
                                      <label for="company_name">Company Name</label>
                                      <br>
                                      <%= text_field_tag :company_name, "", class: 'form-control', required: true %>
                                    </div>
                                  </div>

                                  <div class="col-sm-10 col-sm-offset-1">
                                    <div class="form-group">
                                      <label>Occupation</label>
                                      <select id="b" name="services" class="form-control" required>
                                        <option>Occupation 1</option>
                                        <option>Occupation 2</option>
                                        <option>Occupation 3</option>
                                        <option>Occupation 4</option>
                                        <option>Occupation 5</option>
                                      </select>
                                    </div>
                                  </div>

                                  <div class="col-sm-10 col-sm-offset-1">
                                    <div class="form-group">
                                      <label for="has_files_has_files">Do you currently have CAD or 3D files for this product? *</label>
                                      <br>
                                      <%= radio_button_tag(:has_files, "has_files", false, required: true) %>
                                      <%= label_tag(:source, "Yes") %>
                                      <br>
                                      <%= radio_button_tag(:source, "source") %>
                                      <%= label_tag(:source, "No") %>
                                      <br>
                                    </div>
                                  </div>

                                  <div class="col-sm-10 col-sm-offset-1">
                                    <div class="form-group">
                                      <label for="urgency_urgency">Urgency *</label>
                                      <br>
                                      <%= radio_button_tag(:urgency, "urgency", false, required: true) %>
                                      <%= label_tag(:urgency, "Very Urgent") %>
                                      <br>
                                      <%= radio_button_tag(:urgency, "urgency") %>
                                      <%= label_tag(:urgency, "1-2 weeks") %>
                                      <br>
                                      <%= radio_button_tag(:urgency, "urgency") %>
                                      <%= label_tag(:urgency, " Less than 30 days") %>
                                      <br>
                                      <%= radio_button_tag(:urgency, "urgency") %>
                                      <%= label_tag(:urgency, " 1-3 months") %>
                                      <br>
                                    </div>
                                  </div>

                                </div>
                            </div>
                            <div class="tab-pane" id="address">
                                <div class="row">
                                  
                                  <div class="col-sm-10 col-sm-offset-1">
                                    <div class="form-group">
                                      <label for="first_name">First Name *</label>
                                      <br>
                                      <%= text_field_tag :first_name, "", class: 'form-control', required: true %>
                                    </div>
                                  </div>

                                  <div class="col-sm-10 col-sm-offset-1">
                                    <div class="form-group">
                                      <label for="last_name">Last Name *</label>
                                      <br>
                                      <%= text_field_tag :last_name, "", class: 'form-control', required: true %>
                                      <br>
                                    </div>
                                  </div>

                                  <div class="col-sm-10 col-sm-offset-1">
                                    <div class="form-group">
                                      <label for="linkedin">Linkedin Profile Link</label>
                                      <br>
                                      <%= text_field_tag :linkedin, "", class: 'form-control', required: true %>
                                      <br>
                                    </div>
                                  </div>

                                  <div class="col-sm-10 col-sm-offset-1">
                                    <div class="form-group">
                                      <label for="phone">Phone *</label>
                                      <br>
                                      <%= text_field_tag :phone, "", class: 'form-control', required: true %>
                                      <br>
                                    </div>
                                  </div>

                                  <div class="col-sm-10 col-sm-offset-1">
                                    <div class="form-group">
                                      <%= check_box_tag(:packaging, '', required: true) %>
                                      <%= label_tag(:packaging, "Is packaging required? *") %>
                                      <br>
                                    </div>
                                  </div>

                                </div>
                            </div>

                            <div class="tab-pane" id="sample">
                                <div class="row">
                                  
                                  <div class="col-sm-10 col-sm-offset-1">
                                    <div class="form-group">
                                      <label for="sample_sample">Do you have a sample made? *</label>
                                      <br>
                                      <%= radio_button_tag(:sample, "sample", false, required: true) %>
                                      <%= label_tag(:sample, "Yes") %>
                                      <br>
                                      <%= radio_button_tag(:sample, "sample") %>
                                      <%= label_tag(:sample, "No") %>
                                      <br>
                                    </div>
                                  </div>

                                  <div class="col-sm-10 col-sm-offset-1">
                                    <div class="form-group">
                                      <label for="sensitivity_sensitivity">Is this an intellectual property sensitive product? *</label>
                                      <br><%= radio_button_tag(:sensitivity, "sensitivity", false, required: true) %>
                                      <%= label_tag(:sensitivity, "Yes") %>
                                      <br>
                                      <%= radio_button_tag(:sensitivity, "sensitivity") %>
                                      <%= label_tag(:sensitivity, "No") %>
                                      <br>
                                    </div>
                                  </div>

                                  <div class="col-sm-10 col-sm-offset-1">
                                    <div class="form-group">
                                      <label for="nda_nda">Is an NDA required for this project? *</label>
                                      <br>
                                      <%= radio_button_tag(:nda, "nda", false, required: true) %>
                                      <%= label_tag(:nda, "Yes") %>
                                      <br>
                                      <%= radio_button_tag(:nda, "source") %>
                                      <%= label_tag(:nda, "No") %>
                                      <br>
                                      <%= radio_button_tag(:nda, "source") %>
                                      <%= label_tag(:nda, "I am not sure") %>
                                      <br>
                                    </div>
                                  </div>

                                  <div class="col-sm-10 col-sm-offset-1">
                                    <div class="form-group">
                                      <label for="patent_patent">Patent status *</label>
                                      <br>
                                      <%= radio_button_tag(:patent, "patent", false, required: true) %>
                                      <%= label_tag(:patent, "Pending") %>
                                      <br>
                                      <%= radio_button_tag(:patent, "patent") %>
                                      <%= label_tag(:patent, "Patented") %>
                                      <br>
                                    </div>
                                  </div>

                                  <div class="col-sm-10 col-sm-offset-1">
                                    <div class="form-group">
                                      <label for="assistance_assistance">Do you wish to have assistance or have questions with protection? *</label>
                                      <br>
                                      <%= radio_button_tag(:assistance, "assistance", false, required: true) %>
                                      <%= label_tag(:assistance, "Yes") %>
                                      <br>
                                      <%= radio_button_tag(:assistance, "assistance") %>
                                      <%= label_tag(:assistance, "No") %>
                                      <br>
                                    </div>
                                  </div>

                                </div>
                            </div>

                            <div class="tab-pane" id="demo">
                                <div class="row">
                                  
                                  <div class="col-sm-10 col-sm-offset-1">
                                    <div class="form-group">
                                      <label for="contact_contact">Preferred method to be contacted *</label>
                                      <br>
                                      <%= radio_button_tag(:contact, "contact", false, required: true) %>
                                      <%= label_tag(:contact, "Email") %>
                                      <br>
                                      <%= radio_button_tag(:contact, "contact") %>
                                      <%= label_tag(:contact, "Phone") %>
                                      <br>
                                      <%= radio_button_tag(:contact, "contact") %>
                                      <%= label_tag(:contact, "Linkedin") %>
                                      <br>
                                    </div>
                                  </div>

                                  <div class="col-sm-10 col-sm-offset-1">
                                    <div class="form-group">
                                      <label for="target_price">Target Price *</label>
                                      <br>
                                      <%= text_field_tag :target_price, "", class: 'form-control', required: true %>
                                      <br>
                                    </div>
                                  </div>

                                  <div class="col-sm-10 col-sm-offset-1">
                                    <div class="form-group">
                                      <label for="quantity_quantity">Quantity required *</label>
                                      <br>
                                      <%= radio_button_tag(:quantity, "quantity", false, required: true) %>
                                      <%= label_tag(:quantity, "Samples only") %>
                                      <br>
                                      <%= radio_button_tag(:quantity, "quantity") %>
                                      <%= label_tag(:quantity, "20-1000 units") %>
                                      <br>
                                      <%= radio_button_tag(:quantity, "quantity") %>
                                      <%= label_tag(:quantity, "1000-5000 units") %>
                                      <br>
                                      <%= radio_button_tag(:quantity, "quantity") %>
                                      <%= label_tag(:quantity, "5000-10,000") %>
                                      <br>
                                      <%= radio_button_tag(:quantity, "quantity") %>
                                      <%= label_tag(:quantity, "10,000-25,000") %>
                                      <br>
                                      <%= radio_button_tag(:quantity, "quantity") %>
                                      <%= label_tag(:quantity, "20 foot container") %>
                                      <br>
                                      <%= radio_button_tag(:quantity, "quantity") %>
                                      <%= label_tag(:quantity, "40 foot container") %>
                                      <br>
                                    </div>
                                  </div>

                                  <div class="col-sm-10 col-sm-offset-1">
                                    <div class="form-group">
                                      <%= check_box_tag(:molds, '', required: true) %>
                                      <%= label_tag(:molds, "Does your product require molds? *") %>
                                      <br>
                                    </div>
                                  </div>

                                </div>
                            </div>

                        </div>
                        <div class="wizard-footer height-wizard">
                            <div class="pull-right">
                                <input type='button' class='btn btn-next btn-fill btn-warning btn-wd btn-sm' name='next' value='Next' />
                                <input type='button' class='btn btn-finish btn-fill btn-warning btn-wd btn-sm' name='finish' value='Finish' />

                            </div>

                            <div class="pull-left">
                                <input type='button' class='btn btn-previous btn-fill btn-default btn-wd btn-sm' name='previous' value='Previous' />
                            </div>
                            <div class="clearfix"></div>
                        </div>

                    </form>
                </div>
            </div> <!-- wizard container -->
        </div>
        </div><!-- end row -->
    </div> <!--  big container -->      
    </div>
  </div>
</div>